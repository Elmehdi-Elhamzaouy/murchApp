<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mainActivities.MainActivity_profile">
    

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/prof_img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="130dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="70dp"
            app:shapeAppearanceOverlay="@style/rounded_image"
            android:scaleType="centerCrop"

            android:background="@drawable/circle_shape" />


        <ImageView
            android:id="@+id/edit_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-30dp"
            android:src="@drawable/group_33"
            android:layout_marginTop="147dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/email"
        android:layout_width="214dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="77dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:gravity="center"
        android:background="@drawable/profile_email_field"
        />

    <TextView
        android:id="@+id/Edit_profile"
        android:layout_width="312dp"
        android:layout_height="66dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="Edit Profile"
        android:gravity="center|left"
        android:paddingLeft="20dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:paddingRight="15dp"
        android:drawableLeft="@drawable/edit_prof"
        android:drawableRight="@drawable/arrow_forward"
        android:background="@drawable/profile_things"
        />

    <TextView
        android:id="@+id/saved_products"
        android:layout_width="312dp"
        android:layout_height="66dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="Saved Products"
        android:gravity="center|left"
        android:paddingLeft="20dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:paddingRight="15dp"
        android:drawableLeft="@drawable/bookmark"
        android:drawableRight="@drawable/arrow_forward"
        android:background="@drawable/profile_things"
        />

    <TextView
        android:id="@+id/reviews"
        android:layout_width="312dp"
        android:layout_height="66dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="My Reviews"
        android:gravity="center|left"
        android:paddingLeft="20dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:paddingRight="15dp"
        android:drawableLeft="@drawable/rate_review"
        android:drawableRight="@drawable/arrow_forward"
        android:background="@drawable/profile_things"
        />

    <Button
        android:id="@+id/logout"
        android:layout_width="281dp"
        android:layout_height="47dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:text="Log out"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="@drawable/logout_prof"
        />

</LinearLayout>